package me.gamrboy4life.paradox.module.player;

import me.gamrboy4life.paradox.module.Category;
import me.gamrboy4life.paradox.module.Module;
import net.minecraft.init.Items;
import net.minecraft.item.ItemStack;

public class FastPlace extends Module{

	public FastPlace() {
		super("FastPlace",0,Category.PLAYER);
	}
	
	@Override
	public void onUpdate() {
	    if (this.isToggled()) {
	        if (!isEnderPearlInHand()) {
	            mc.rightClickDelayTimer = 1;
	        }
	    }
	}

	private boolean isEnderPearlInHand() {
	    ItemStack heldItem = mc.thePlayer.getHeldItemMainhand();
	    return !heldItem.isEmpty() && heldItem.getItem() == Items.ENDER_PEARL;
	}
}
