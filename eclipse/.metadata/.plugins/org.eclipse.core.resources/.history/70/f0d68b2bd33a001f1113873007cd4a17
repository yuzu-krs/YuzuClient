package me.gamrboy4life.paradox.module.render;

import me.gamrboy4life.paradox.module.Category;
import me.gamrboy4life.paradox.module.Module;

public class FullBright extends Module{

    private float oldGamma = mc.gameSettings.gammaSetting;

    public FullBright() {
        super("FullBright", 0, Category.RENDER);
    }

    @Override
    public void onEnable() {
        oldGamma = mc.gameSettings.gammaSetting; // Save the current gamma setting
        mc.gameSettings.gammaSetting = 100; // Set the gamma to maximum brightness
    }

    @Override
    public void onDisable() {
        mc.gameSettings.gammaSetting = oldGamma; // Restore the original gamma setting
    }

    @Override
    public void onRender() {
        // No need to handle gamma setting here
    }
}