package me.gamrboy4life.paradox.mods.impl;

import me.gamrboy4life.paradox.module.Category;
import me.gamrboy4life.paradox.module.Module;

public class EnchantEffect extends Module {

    private ModGlintColor modGlintColor;

    public EnchantEffect() {
        super("EnchantEffect", 0, Category.MISC);
        modGlintColor = new ModGlintColor();
    }

    @Override
    public void onRender() {
        // Example to enable or disable the mod
        if (someCondition) {
            modGlintColor.setEnable(true);
        } else {
            modGlintColor.setEnable(false);
        }
    }
}