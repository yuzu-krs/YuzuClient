package me.gamrboy4life.paradox.module.player;

import me.gamrboy4life.paradox.module.Category;
import me.gamrboy4life.paradox.module.Module;
import me.gamrboy4life.paradox.mods.impl.ModXYZ;

public class XYZStatus extends Module {

    private ModXYZ modXYZ;

    public XYZStatus(ModXYZ modXYZ) {
        super("XYZStatus", 0, Category.PLAYER);
        this.modXYZ = modXYZ;
    }

    @Override
    public void onUpdate() {
        if (this.isToggled()) {
            modXYZ.setEnabled(true);
        } else {
            modXYZ.setEnabled(false);
        }
    }
}